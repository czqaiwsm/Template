<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_bar_height"
                android:background="@color/mainColor">

    <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textColor="@color/main_txt_black"
            android:textSize="@dimen/txt_size_normal"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

        <ImageView
                android:id="@+id/header_left_icon"
                android:layout_width="@dimen/header_bar_height"
                android:layout_height="@dimen/header_bar_height"
                android:background="@drawable/item_click_select"
                android:scaleType="center"
                android:src="@drawable/head_back"
                android:visibility="gone"
                />
        
         <ImageView  android:id="@+id/header_gz_icon"
                android:layout_width="@dimen/header_bar_height"
                android:layout_height="@dimen/header_bar_height"
                android:background="@drawable/item_click_select"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:visibility="gone"
                />
          <ImageView android:id="@+id/header_share_icon"
                android:layout_width="@dimen/header_bar_height"
                android:layout_height="@dimen/header_bar_height"
                android:background="@drawable/item_click_select"
                 android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/share"
                android:visibility="gone"
                />
    </LinearLayout>

    <ImageView
            android:id="@+id/header_right_icon"
            android:layout_width="@dimen/header_bar_height"
            android:layout_height="@dimen/header_bar_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/item_click_select"
            android:scaleType="center"
            android:visibility="gone"
            />

    <ImageView
            android:id="@+id/header_right_more"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/header_bar_height"
            android:layout_height="@dimen/header_bar_height"
            android:padding="12dip"
            android:layout_toLeftOf="@id/header_right_icon"
            android:background="@drawable/item_click_select"
            android:src="@android:drawable/ic_menu_share"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/header_rignt_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/item_click_select"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textSize="@dimen/txt_size_normal"
            android:textColor="@color/main_txt_black"
            android:visibility="gone"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_liner"/>

</RelativeLayout>